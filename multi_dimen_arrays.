import java.util.Scanner;
public class multi_dimen_arrays {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[][] multi_dime_array = new int[2][2];
		int i,j;
		Scanner input = new Scanner(System.in);
		
		
		double[][] array = new double[4][3];
		System.out.println(array[2][0]);
		
		String[][] str_array = new String[3][2];
		System.out.println(str_array[1][1]);
		
		System.out.println("Enter values for 2 dimensional array: ");
		for(i=0;i<2;i++)
		{
			for(j=0;j<2;j++)
			{
				multi_dime_array[i][j] = input.nextInt();
			}
		}
		
		for(i=0;i<2;i++)
		{
			System.out.print("{");
			for(j=0;j<2;j++)
			{
				System.out.print(multi_dime_array[i][j]+"\t");
			}
			System.out.println("}");
		}
	}

}
